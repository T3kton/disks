#!/bin/sh
#SOURCE: https://busybox.net/downloads/busybox-1.36.1.tar.bz2
#HASH: a5d40ca0201b20909f7a8a561adf57adccc8a877

set -e
#set -x

build()
{
  tar --strip-components=1 -xjf $1
  cp ../../configs/busybox .config
  if [ "x$2" = "xx86_64" ]
  then
    make $3
  elif [ "x$2" = "xarm" ]
  then
    make ARCH=arm CROSS_COMPILE=arm-linux-gnueabihf- $3
  elif [ "x$2" = "xarm64" ]
  then
    make ARCH=arm64 CROSS_COMPILE=aarch64-linux-gnu- $3
  fi
}

install()
{
  : # allready installed ;-)
}
