#!/bin/sh
#SOURCE: https://busybox.net/downloads/busybox-1.32.0.tar.bz2
#FILE: busybox-1.32.0.tar.bz2
#HASH: 277b245e4bbad2df44c767017c68cb68c477274b

set -e
#set -x

build()
{
  tar --strip-components=1 -xjf $1
  cp ../../configs/busybox .config
  if [ "x$3" = "xx86_64" ]
  then
    make $4
  elif [ "x$3" = "xarm" ]
  then
    make ARCH=arm CROSS_COMPILE=arm-linux-gnueabihf- $4
  elif [ "x$3" = "xarm64" ]
  then
    make ARCH=arm64 CROSS_COMPILE=aarch64-linux-gnu- $4
  fi
}

install()
{
  : # allready installed ;-)
}
