#!/bin/sh
#SOURCE: https://ftp.gnu.org/gnu/parted/parted-3.3.tar.xz
#FILE: parted-3.3.tar.xz
#HASH: e639500f9587cf6fa9b0dbc08e5e760244614595

set -e
#set -x

build()
{
  tar --strip-components=1 -xJf $1
  if [ "x$3" = "xx86_64" ]
  then
    CFLAGS="-I`pwd`/../lvm2-x86_64/libdm/" LDFLAGS="-L`pwd`/../lvm2-x86_64/libdm/" ./configure --prefix= --disable-shared --without-readline
  elif [ "x$3" = "xarm" ]
  then
    ./configure --prefix= --disable-shared --without-readline --host arm-linux-gnueabihf --build x86_64-pc-linux-gnu
  elif [ "x$3" = "xarm64" ]
  then
    ./configure --prefix= --disable-shared --without-readline --host aarch64-linux-gnu --build x86_64-pc-linux-gnu
  fi
  make $4
}

install()
{
  cp -f $3/parted/parted $1/sbin
}

binaries()
{
  ls $1/sbin/parted
}
