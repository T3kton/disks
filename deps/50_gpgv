#!/bin/sh
#SOURCE: https://www.gnupg.org/ftp/gcrypt/gnupg/gnupg-2.1.23.tar.bz2
#FILE: gnupg-2.1.23.tar.bz2
#HASH: c470777eaa9657ef3258068507065c9a7caef9eb

set -e
#set -x

build()
{
  tar --strip-components=1 -xjf $1
  if [ "x$3" = "xx86_64" ]
  then
    ./configure --prefix= --disable-ntbtls --disable-gnutls --disable-ldap --disable-nls --disable-card-support --disable-dirmngr --disable-scdaemon --disable-doc
  elif [ "x$3" = "xarm" ]
  then
    ./configure --prefix= --disable-ntbtls --disable-gnutls --disable-ldap --disable-nls --disable-card-support --disable-dirmngr --disable-scdaemon --disable-doc --host arm-linux-gnueabihf --build x86_64-pc-linux-gnu
  elif [ "x$3" = "xarm64" ]
  then
    ./configure --prefix= --disable-ntbtls --disable-gnutls --disable-ldap --disable-nls --disable-card-support --disable-dirmngr --disable-scdaemon --disable-doc --host aarch64-linux-gnu --build x86_64-pc-linux-gnu
  fi
  make $4
}

install()
{
  cp -f $3/g10/gpgv $1/sbin
}

binaries()
{
  ls $1/sbin/gpgv
}
