[kernel]

[filesystem]
partition_type=gpt
fs_type=ext4
md_meta_version=1.0
extra_mount_1=proc:proc:/proc
extra_mount_2=sysfs:sysfs:/sys
extra_mount_3=:/dev:/dev:bind
extra_mount_4=devpts:devpts:/dev/pts
extra_mount_5=proc:proc:/proc
extra_mount_6=binfmt_misc:binfmt_misc:/proc/sys/fs/binfmt_misc

[fstab]
prefix_1=# <file system> <mount point>   <type>  <options>       <dump>  <pass>
prefix_2=proc  /proc  proc  defaults  0  0

[bootstrap]
type=debbootstrap
distro=trusty

[packaging]
manager_type=apt
prebase_templates=timezone
selection_1=libc6           libraries/restart-without-asking select true
selection_2=console-setup   console-setup/codeset47          select # Latin1 and Latin5 - western Europe and Turkic languages
selection_3=console-setup   console-setup/fontface47         select Fixed
selection_4=console-setup   console-setup/fontsize-text47    select 16
selection_5=console-setup   console-setup/charmap47          select UTF-8
selection_6=grub-pc         grub-pc/install_devices          multiselect {{ _installer.filesystem.boot_drives|join( ' ' ) }}
selection_7=grub-pc         grub-pc/install_devices_disks_changed multiselect {{ _installer.filesystem.boot_drives|join( ' ' ) }}
selection_8=grub-pc         grub-pc/install_devices_empty    boolean true
selection_9=grub-pc         grub-pc/timeout                  string 5
selection_10=grub-pc        grub2/linux_cmdline_default      string
selection_11=grub-pc        grub-pc/hidden_timeout           boolean false
prebase_cmd_1=/usr/sbin/dpkg-reconfigure -f noninteractive tzdata
base=ubuntu-standard
packages=resolvconf aptitude console-setup language-pack-en-base
source_templates=sources,apt
divert_1=/sbin/initctl:/bin/true
divert_2=/sbin/status:/bin/true
divert_3=/sbin/start:/bin/true
divert_4=/usr/sbin/service:/bin/true
divert_5=/usr/sbin/invoke-rc.d:/bin/true


[config]
base_templates=interfaces,hosts

[booting]
bootloader_templates=grub

[general]
after_cmd_1=sed s/"PermitRootLogin [A-Za-z\-]*"/"PermitRootLogin yes"/ -i /etc/ssh/sshd_config
after_cmd_2=rm -f /etc/resolvconf/resolv.conf.d/original
after_cmd_3=rm -f /etc/resolvconf/resolv.conf.d/tail
after_cmd_4=touch /etc/resolvconf/resolv.conf.d/tail

[packages]
bootloader_package=grub-pc
kernel_package=linux-image-generic
mdadm_package=mdadm
lvm_package=lvm2
filesystem_xfs_package=xfsprogs
